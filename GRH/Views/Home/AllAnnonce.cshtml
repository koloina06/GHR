@{
     Layout = "~/Views/Shared/BackOfficeAccueil.cshtml";
}
<div class="card shadow mb-4">
 <div class="card-header py-3">
   <h6 class="m-0 font-weight-bold text-primary">Liste Annonce </h6>
 </div>
 <div class="card-body">
   <div class="table-responsive">
     <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
       <thead>
       <tr>
         <th>Service</th>
         <th>Poste</th>
         <th>Description</th>
         <th>Date</th>
         <th>Personne a recruté</th>
         <th>Etat</th>
         <th>Action</th>
       </tr>
       </thead>
       <tfoot>
       <tr>
         <th>Service</th>
         <th>Poste</th>
         <th>Description</th>
         <th>Date</th>
         <th>Personne a recruté</th>
         <th>Etat</th>
         <th>Action</th>
       </tr>
       </tfoot>
       <tbody>
       @foreach (Annonce a in @ViewBag.allA)
       {
         <tr>
           <td>@a.postes.service.nomService</td>
           <td>@a.postes.nomPoste</td>
           <td>@a.descriptions</td>
           <td>@a.dateAnnonce</td>
           <td>@a.getNombreRecrue()</td>
           <td>
             @if (@a.etat == 0)
             {
               <a>En cours...</a>
             }
             else
             {
               <a>Close!</a>
             }
           </td>
           <td class="action-table">
             <a href="#" class="btn btn-success btn-circle">
               <i class="fas fa-pencil-alt"></i>
             </a>
             <a href="#" class="btn btn-danger btn-circle">
               <i class="fas fa-trash"></i>
             </a>
             <a href="https://localhost:7248/Home/Choice?idAnnonce=@a.idAnnonce" class="btn btn-info btn-circle">
               <i class="fas fa-info-circle"></i>
             </a>
           </td>
         </tr>
       }
       </tbody>
     </table>
   </div>
 </div>
 </div>
        