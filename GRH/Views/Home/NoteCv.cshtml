@model List<Cv>

<body>
    <h1>Liste des CV</h1>

    <form action="" method="post">
        <label for="dateTest">Date de test :</label>
        <input type="datetime-local" id="dateTest" name="dateTest">
        <button type="button" class="btn btn-primary">Envoyer le test</button>
    </form>
   
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénoms</th>
                <th>Date de naissance</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Sexe</th>
                <th>Critère</th>
                <th>Sous-critère</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cv in Model)
            {
                <tr>
                    <td>@cv.client.nom</td>
                    <td>@cv.client.prenoms</td>
                    <td>@cv.client.dtn</td>
                    <td>@cv.client.email</td>
                    <td>@cv.client.adresse</td>
                    <td>@cv.client.sexe</td>
                    <td></td>
                    <td></td>
                    <td>@cv.client.note</td>
                </tr>
                @foreach (var details in cv.sousCritere)
                {
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>@details.critere.nomCritere</td>
                        <td>@details.nomSousCritere</td>
                        <td></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
